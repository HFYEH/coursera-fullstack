<p>Listing Todo Items</p>
<%= @todo_items.each do |todo_item| %>
<%= form_for todo_item do |f| %>
  <%= f.label :title %>
  <%= f.text_field :title %>
  
  <%= f.label :description %>
  <%= f.text_area :description %>
  
  <%= f.label :due_date %>
  <%= f.date_field :due_date %>
  
  <%= f.label :completed %>
  <%= f.check_box :completed %>
  

<% end %>
<% end %>

  <%= link_to "New Todo item", new_todo_item_path %>
  
  
  <p><%= "Number of Completed Todos: #{@count}" %></p>